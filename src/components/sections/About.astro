---
import TypingEffect from "../ui/TypingEffect.jsx";
import EmailBox from "../ui/EmailBox.jsx";

// Tecnologías
const technologies : Array<{ name: string; icon: string }> = [
	{ name: "HTML", icon: "html5" },
	{ name: "CSS", icon: "css" },
	{ name: "JavaScript", icon: "javascript" },
	{ name: "TypeScript", icon: "typescript" },
	{ name: "React", icon: "react" },
	{ name: "Vue", icon: "vue" },
	{ name: "Next.js", icon: "nextjs" },
	{ name: "Astro", icon: "astro" },
	{ name: "Tailwind CSS", icon: "tailwindcss" },
	{ name: "Java", icon: "java" },
	{ name: "Python", icon: "python" },
	{ name: "PHP", icon: "php" },
	{ name: "Node.js", icon: "nodejs" },
	{ name: "Express", icon: "express" },
	{ name: "SQL", icon: "mysql" },
	{ name: "MongoDB", icon: "mongodb" },
	{ name: "Git", icon: "git" },
	{ name: "GitHub", icon: "github" },
];

---

<section id="about" aria-label="Presentación de Cristian Cantero López" class="w-screen py-30 mb-20 flex flex-col items-center justify-center gap-20 md:min-h-screen md:py-0">
	<div class="max-w-4xl mx-auto flex justify-center gap-10 items-center flex-col-reverse md:flex-row md:gap-24">
		<div class="flex flex-col gap-10 max-w-sm mx-auto">
			<div>
				<TypingEffect client:only /> <!--Componente de efecto de escritura -->
				<a href="https://www.linkedin.com/in/cristian-cantero-l%C3%B3pez/" target="_blank" class="inline-block mt-4 text-xs font-bold text-white border rounded-full border-[#7bd47b] px-2 py-1 hover:scale-105 transition-transform duration-300" rel="noopener noreferrer">
					Disponible para trabajar
				</a>
			</div>
			<p class="text-md font-medium text-white">Desarrollador Full Stack enfocado en construir aplicaciones web funcionales, responsivas y centradas en la experiencia del usuario. Comprometido con la optimización del rendimiento, la accesibilidad y las buenas prácticas de desarrollo.</p>
			<div class="flex gap-2 mx-auto md:mx-0">
				<!-- Añadir redes sociales y botón para abrir CV en otra pestaña -->
				 <!-- Linkedin, GitHub y Gmail + Descargar CV -->
				<a href="https://www.linkedin.com/in/cristian-cantero-l%C3%B3pez/" target="_blank" class="inline-flex items-center justify-center gap-2 text-white text-xs font-bold border border-gray-400 rounded-lg px-2 py-1.5 bg-gray-800 hover:bg-gray-900 transition-colors duration-300" rel="noopener noreferrer">
